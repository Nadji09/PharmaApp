<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".UploadActivity">

    <Button
            android:text="supprimer"
            android:textAllCaps="false"
            android:fontFamily="@font/comic"
            android:textSize="12sp"
            android:background="#2E96AA"
            android:drawableLeft="@drawable/garbage_24"
            android:paddingLeft="15dp"
            android:textColor="@android:color/white"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:id="@+id/supprimer"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:text="uploader"
            android:textAllCaps="false"
            android:fontFamily="@font/comic"
            android:textSize="12sp"
            android:drawableLeft="@drawable/up_arrow_24"
            android:paddingLeft="15dp"
            android:background="@drawable/button_uploader"
            android:textColor="@android:color/white"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:id="@+id/upload"
            app:layout_constraintEnd_toStartOf="@+id/supprimer"
            app:layout_constraintBaseline_toBaselineOf="@+id/supprimer"/>
    <Button
            android:text="envoyer"
            android:textAllCaps="false"
            android:fontFamily="@font/comic"
            android:textSize="12sp"
            android:background="@drawable/button_envoyer"
            android:drawableLeft="@drawable/icon_envoyer"
            android:paddingLeft="15dp"
            android:textColor="@android:color/white"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:id="@+id/envoyer"
            app:layout_constraintStart_toEndOf="@+id/supprimer"
            app:layout_constraintBaseline_toBaselineOf="@+id/supprimer"
    />
    <ImageView
            android:layout_width="0dp"
            android:layout_height="479dp" app:srcCompat="@drawable/upload_space"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/supprimer"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.55"
            android:layout_marginLeft="8dp" android:layout_marginRight="12dp"/>
</android.support.constraint.ConstraintLayout>