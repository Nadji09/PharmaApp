<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupPopout">

    <TextView
            android:text="Votre compte a été crée avec succès\nVous pouvez dès à présent vous\nconnectez en utilisant le mot de\npasse qui vous a été envoyé par SMS"
            android:fontFamily="@font/comic"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="#2E91AA"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView9" android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" android:layout_marginRight="10dp">
        <Button
                android:text="Aller à l'interface de connexion"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/button4"
                android:background="@drawable/forgetpwd_btn"
                android:textSize="10dp"
                android:textColor="#fff"
                android:fontFamily="@font/comic"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>