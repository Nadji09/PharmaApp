<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:maxHeight="95dp"

>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:background="@drawable/commande"
            android:layout_height="85dp" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.49" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp">


        <TextView
                android:text="TextView"
                android:fontFamily="@font/comic"
                android:textSize="12sp"
                android:textColor="#707070"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nom_date"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="18dp" android:layout_marginLeft="19dp" android:layout_marginStart="19dp"/>
        <TextView
                android:text="TextView"
                android:fontFamily="@font/comic"
                android:textSize="12sp"
                android:textColor="#707070"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharmacie" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/nom_date" app:layout_constraintStart_toStartOf="@+id/nom_date"
        />
        <TextView
                android:text="TextView"
                android:fontFamily="@font/comic"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:id="@+id/etat"
                app:layout_constraintBaseline_toBaselineOf="@+id/pharmacie" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp" android:textStyle="bold"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>